doctype html
head
    title="Clasificador de material"
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' type='text/css' href='/public/stylesheets/collapsible.css')
    link(rel='stylesheet' type='text/css' href='/public/stylesheets/clasificador.css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
    script.
        const Keys = !{JSON.stringify(keys)};
    script.
        const Facultades = !{JSON.stringify(facultades)};
    script.
        const Cursos = !{JSON.stringify(cursos)};
body
    h2 Clasificador de material
    button.collapsible Botones
    div.content
